<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:foregroundTint="#D62929"
    android:outlineAmbientShadowColor="#A83131"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/idObra"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#5E0DEF"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/ebg_medium_italic"
        android:hint="Id de Obra"
        android:textAlignment="center"
        android:textColor="#EA0D0D"
        android:textColorHint="#C6B3EA" />

    <EditText
        android:id="@+id/nombreObra"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/idObra"
        android:backgroundTint="#5E0DEF"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/ebg_medium_italic"
        android:hint="Nombre de la Obra"
        android:textAlignment="center"
        android:textColor="#EA0D0D"
        android:textColorHint="#C6B3EA" />
    <!--    Salto de Bloque-->
    <EditText
        android:id="@+id/tamanoObra"
        android:layout_width="110dp"
        android:layout_height="65dp"
        android:layout_below="@+id/idObra"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#5E0DEF"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/ebg_medium_italic"
        android:hint="Medidas de la Obra"
        android:textAlignment="center"
        android:textColor="#EA0D0D"
        android:textColorHint="#C6B3EA" />

    <EditText
        android:id="@+id/tecnicaObra"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_below="@+id/nombreObra"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/tamanoObra"
        android:backgroundTint="#5E0DEF"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/ebg_medium_italic"
        android:hint="Tecnica de la Obra"
        android:textAlignment="center"
        android:textColor="#EA0D0D"
        android:textColorHint="#C6B3EA" />

    <EditText
        android:id="@+id/materialesObra"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tecnicaObra"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/valorEconomicoObra"
        android:backgroundTint="#5E0DEF"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/ebg_medium_italic"
        android:hint="Materiales de la Obra"
        android:textAlignment="center"
        android:textColor="#EA0D0D"
        android:textColorHint="#C6B3EA" />

    <EditText
        android:id="@+id/valorEconomicoObra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tamanoObra"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#5E0DEF"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/ebg_medium_italic"
        android:hint="Precio de la Obra"
        android:textAlignment="center"
        android:textColor="#EA0D0D"
        android:textColorHint="#C6B3EA" />

    <EditText
        android:id="@+id/nombreAutor"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valorEconomicoObra"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#5E0DEF"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/ebg_medium_italic"
        android:hint="Nombre del Autor"
        android:textAlignment="center"
        android:textColor="#EA0D0D"
        android:textColorHint="#C6B3EA" />

    <EditText
        android:id="@+id/telefonoAutor"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/materialesObra"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/nombreAutor"
        android:backgroundTint="#5E0DEF"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/ebg_medium_italic"
        android:hint="Numero Telefonico"
        android:textAlignment="center"
        android:textColor="#EA0D0D"
        android:textColorHint="#C6B3EA" />

    <EditText
        android:id="@+id/correoAutor"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreAutor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#5E0DEF"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/ebg_medium_italic"
        android:hint="Correo del Autor"
        android:textAlignment="center"
        android:textColor="#EA0D0D"
        android:textColorHint="#C6B3EA" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefonoAutor"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/correoAutor"
        android:text="Guardar" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correoAutor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Buscar" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correoAutor"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="-134dp"
        android:layout_toEndOf="@+id/btnSearch"
        android:text="Actualizar" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correoAutor"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="-134dp"
        android:layout_toEndOf="@+id/btnUpdate"
        android:text="Eliminar" />


    <ListView
        android:id="@+id/lvArt"
        android:layout_below="@id/btnSearch"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/design_default_color_surface" />
</RelativeLayout>